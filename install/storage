upstream storage {

    # Socket mode
    server unix:/tmp/storage.uwsgi.sock;

}

server {

    listen 8000;

    # Adjust to taste
    client_max_body_size 256M;

    location /static {
        alias /usr/lib/archivematica/storage-service/assets;
    }

    location / {
        uwsgi_pass storage;
        uwsgi_read_timeout 3600;
        uwsgi_send_timeout 3600;
        include /etc/nginx/uwsgi_params;
    }

}
